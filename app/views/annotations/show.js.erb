ias = $('#comment_image_<%= @annotation.image.id %> img').imgAreaSelect({ fadeSpeed: 400, handles: true, instance: true });

// If nothing's selected, start with a tiny area in the center
if (!ias.getSelection().width)
  ias.setOptions({ show: true, x1: 0, y1: 0, x2: 0, y2: 0 });

ias.animateSelection(<%= @annotation.x1 %>, <%= @annotation.y1 %>, <%= @annotation.x2 %>, <%= @annotation.y2 %>, 'slow');
